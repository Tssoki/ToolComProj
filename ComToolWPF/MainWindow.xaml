<Window x:Class="ComToolWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComToolWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">

    <Window.Resources>
        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#2d302d"/>
        </Grid.Background>
        <DataGrid IsReadOnly="True" x:Name="entryList" d:ItemsSource="{Binding TestList}" Margin="30,51,36,72"
                  AutoGenerateColumns="False"
                  CanUserSortColumns="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Priority" HeaderStyle="{StaticResource CenterGridHeaderStyle}" Binding="{Binding Priority}"/>
                <DataGridTextColumn Header="Pole" Width="50" HeaderStyle="{StaticResource CenterGridHeaderStyle}"  Binding="{Binding Pole}"/>
                <DataGridTextColumn Header="Question" Width="556" HeaderStyle="{StaticResource CenterGridHeaderStyle}"  Binding="{Binding Question}"/>
                <DataGridTextColumn Header="Answer" Width="556" HeaderStyle="{StaticResource CenterGridHeaderStyle}"  Binding="{Binding Answer}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Update" Margin="30,10,0,0" Click="Button_Click" HorizontalAlignment="Left" Width="177" Height="34" VerticalAlignment="Top"/>
    </Grid>
    
    

</Window>
